<table class="table table-striped table-bodered">
 <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
    </tr>
  </thead>
<% @stories.each do |story| %>
<tr>
    <td><img width="150";height="100"; src=<%=story.media_link%> ></td>
    <td><%= link_to( story.title, {:controller => "stories", :action => "show",:id => story.id}) %></td>
    <td><%= story.content %></td>
    <td><%= story.category %></td>
</tr>
<%end%>
</table>
