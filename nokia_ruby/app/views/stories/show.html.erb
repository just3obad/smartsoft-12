<%= link_to('Go to statistics page', {:controller => 'statistics', :action => 'stories', :id => @story.id}, class: "btn btn-large btn-primary") %>
<!-- This table class is from bootstrap and we show a table with the stoy attributes -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Related Interest</th>
      <th>Description</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @story.title %></td>
      <td><%= @story.interest_id %></td> 
      <td><%= @story.description %></td>
      <td><%= @story.content %></td>
  <% @comments.each do |comment| %>
      <td><%= comment.id %></td> 
      <td><%= comment.content %></td>
      <td><%= comment.user_id %></td>
      <td><%= comment.story_id %></td>
      <%end%>
    </tr>
  </tbody>
</table>
