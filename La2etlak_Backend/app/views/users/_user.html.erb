  <div class="field" align="center">
    
    <%= f.password_field :password,:style => "height:40px; width:200px",  :placeholder => 'Password'%>
  </div>
  <div class="field" align="center">
    
    <%= f.password_field :password_confirmation,:style => "height:40px; width:200px",  :placeholder => 'Password Confirmation'%>
  </div>
  <div class="actions" align="center">
    <%= f.submit "Register", :style => "width:100px" %>
  </div>
<% end %>

