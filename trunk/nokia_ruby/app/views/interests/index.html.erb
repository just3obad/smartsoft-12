<table class="table table-striped table-bodered">
  <tr>
    <th> Number </th>
    <th>  </th>
    <th> Title </th>
    <th> Description </th>
  </tr>
  <% for interest in @interests %>
    <tr>

      <td><%= interest.id %></td>
      <td><img width="150";height="100"; src=interest.image></td>
      <td><%= interest.name %></td>
      <td><%= interest.description %></td>
    </tr>
  <% end %>
</table>
<%= link_to("Add a new interest", {:controller => 'interests', :action => 'new'}, class: "btn") %>
