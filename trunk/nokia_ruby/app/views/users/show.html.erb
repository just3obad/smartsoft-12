  <body>
  
	<div style="position: absolute; top: 100px; left: 450px; z-index: 1px; visibility: show;">
		 <font size="9" face="verdana" color="black" > La2etllak </font>
		 <a/>
	</div>  
										<!-- Showing The User's First_Name And Last_Name -->
	<div style="position: absolute; top: 290px; left: 400px; z-index: 1px; visibility: show;">
		 <font size="4" face="verdana" color="black" > Name </font>
	</div>
	<div style="position: absolute; top: 290px; left: 520px; z-index: 1px; visibility: show;">
		 <font size="3" face="aerial" color="black" > : @user.first_name @user.last_name </font>
	</div>
										<!-- Showing The User's UserName -->
	<div style="position: absolute; top: 350px; left: 400px; z-index: 1px; visibility: show;">
		 <font size="4" face="verdana" color="black" > UserName </font>
	</div>
	<div style="position: absolute; top: 350px; left: 520px; z-index: 1px; visibility: show;">
		 <font size="3" face="aerial" color="black" > : @user.name </font>
	</div>	
										<!-- Showing The User's E-Mail -->
	<div style="position: absolute; top: 410px; left: 400px; z-index: 1px; visibility: show;">
		 <font size="4" face="verdana" color="black" > E-Mail  </font>
	</div>	
	<div style="position: absolute; top: 410px; left: 520px; z-index: 1px; visibility: show;">
		 <font size="3" face="aerial" color="black" > : @user.email </font>
	</div>
										<!-- Showing The User's Activation Status -->
	<div style="position: absolute; top: 470px; left: 400px; z-index: 1px; visibility: show;">
		 <font size="4" face="verdana" color="black" > Deactivation  </font>
	</div>
	
	<div style="position: absolute; top: 470px; left: 520px; z-index: 1px; visibility: show;">
		 <font size="3" face="aerial" color="black" > : @user.deactivation </font>
	</div>
										<!-- A Link To This User's Statistics Page -->
	<div style="position: absolute; top: 570px; left: 400px; z-index: 1px; visibility: show;">
		 <a href ="{:controller => 'statistics', :action => 'users', :id => @user.id}"> 
		 		 <font size="4" face="verdana" color="black" > Show Statistics </font>
		 <a/>
	</div>	
										<!-- Showing The User's Image -->
    <div style="position: absolute; top: 300px; left: 20px; z-index: 1px; visibility: show;">
  		 <img src="@user.image" alt="No Image Found" width="250" height="250" />
	</div>	
