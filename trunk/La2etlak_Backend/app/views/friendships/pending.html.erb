
<html> 
	<% if @inviters.count != 0 %>
	<header> Pending requests </header>

	<ul>
		<div>

		<% @inviters.each do |inviter| %>
			<li>
				<div style="margin:1%;" >
					<%= inviter.email.split('@').first %>
				</div>	
					<%= link_to 'Approve',{:controller => 'friendships',
					 	:action => 'accept',
					  	:friend_id => inviter.id}, 
					  	class: "btn btn-success" %>

					<%= link_to 'Ignore',{:controller => 'friendships',
					 	:action => 'remove',
					 	:friend_id => inviter.id},
					 	class: "btn" %>

					<%= link_to 'Block',{:controller => 'friendships',
						:action => 'block', 
						:friend_id => inviter.id}, 
						class: "btn btn-danger" %>
			</li>
		<% end %>
		</div>

	</ul>
	<% end %>
	<div style="margin:2%;">
	<%= link_to 'Friendlist',{:controller => 'friendships',
		:action => 'index'}, 
		class: "btn btn-small" %>
	</div>

</html>