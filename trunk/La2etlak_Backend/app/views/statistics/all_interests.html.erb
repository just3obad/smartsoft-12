<script type="text/javascript" charset="utf-8">
    /*this is to draw the pie chart 2 arrays are passed to it names and ranks of
     top ranked 5 interests*/
   var $j = jQuery.noConflict();
  $j(document).ready(function() {
       
      var arrayNames = <%= Interest.get_top_interests_names%>;
      var arrayRanks = <%= Interest.get_top_interests_ranks%>;
      var name = [];
      var data = [];
      if (arrayNames.length < 5)
      {
        name= arrayNames;
        data= arrayRanks;
      }
      else {
       name= arrayNames[0..4];
       data= arrayRanks[0..4];
      }
      var title="Top Interests";
      var container="ccc";
      Pie_chart(name,data,title,container);
   });
</script>


