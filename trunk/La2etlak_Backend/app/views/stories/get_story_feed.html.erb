<% # encoding: utf-8%>
<html>
 <!-- back to main feed button -->
	<div align="center">
			   <%= link_to_function image_tag('back-icon.png' , :style =>"width:40px;height:40px;"), "history.back()" %>
	   </div></br> 
 </div>


<!-- adding story title-->
 <div align="center">
        <h3> <%= @story.title %> </h3>
      </div>

<!--checking for media url if exsist adds the image-->
    <% if @story.media_link != nil && @story.media_link.length > 3%>
    <div align="center">
    <img src="<%=@story.media_link%>" width="220" align="center">
	 </div></br>
	<%end%>
	
 	 
<!-- adds content of story  -->
 <% if @story.content != nil && @story.content.length > 0%>
 <div class="story-comment-box-mobile pre-scrollable" style="padding-left:10px;">
 <%=raw @story.content %>
 </br></br>
 </div>
 <%end%>
    
</html> 	

